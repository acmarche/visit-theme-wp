{% if children|length > 0 %}
    <ul class="cat-filters d-md-flex mw-448px flex-wrap justify-content-center align-items-center d-none mx-auto">
        {% for child in children %}
            <li class="px-0 position-relative">
                <a href="{{ child.url }}">
                    <input name="cat" id="{{ child.id }}" class="position-absolute top-0 bottom-0 left-0 right-0 w-100 h-100"
                           type="radio"
                           value="res">
                    <label for="{{ child.id }}" class="py-4px px-8px fs-short-2 ff-semibold transition-color">
                        {{ child.name }}
                    </label>
                </a>
            </li>
        {% endfor %}
    </ul>
{% endif %}
