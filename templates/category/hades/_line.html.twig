<a href="{{ offre.url }}" class="bg-img rounded-xs">
    {% include 'category/hades/_image.html.twig' %}
    <div class="col py-18px pl-28px pr-14px text-left lh-0 px-lg-16px">

        <!--TODO JF: placer la limite de caractère pour l'ellipsis-->
        <h3 maxlenght="0">{{ offre.titre }}</h3>

        <!--TODO JF: placer la limite de caractère pour l'ellipsis-->
        {% if offre.descriptions | length > 0 %}
            <p maxlenght="170">{{ offre.descriptions[0].texte | u.truncate(170, '...') }}</p>
        {% endif %}

        <span class="text-primary">
                {% for category in offre.categories %}
                    {{ category.lib }}
                {% endfor %}
            </span>
    </div>
</a>
