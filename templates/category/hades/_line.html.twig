<a href="{{ fiche.url }}" class="bg-img rounded-xs">
    <i class="bg-img-enjoy-1 bg-img-size-hover-110">
        <b class="d-block position-absolute top-0 bottom-0 left-0 right-0 bg-img-bgcolor-primary-0 bg-img-bgcolor-hover-primary-55 bg-img-transition-bgcolor"></b>
        <span class="text-white shadow-text-sm m-auto bg-img-opacity-0 bg-img-opacity-hover-1 transition-opacity d-block align-self-center z-10 ff-semibold fs-short-2">Lire plus</span>
    </i>
    <div class="col py-18px pl-28px pr-14px text-left lh-0 px-lg-16px">

        <!--TODO JF: placer la limite de caractère pour l'ellipsis-->
        <h3 maxlenght="0">{{ fiche.titre }}</h3>

        <!--TODO JF: placer la limite de caractère pour l'ellipsis-->
        {% if fiche.descriptions | length > 0 %}
            <p maxlenght="170">{{ fiche.descriptions[0].texte | u.truncate(170, '...') }}</p>
        {% endif %}

        <span class="text-primary">
                {% for category in fiche.categories %}
                    {{ category.lib }}
                {% endfor %}
            </span>
    </div>
</a>
