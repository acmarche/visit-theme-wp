{% for horaire in offre.horaires %}
    <h4 class="ff-semibold fs-short-1">{{ horaire.lib }}</h4>
    <span class="fs-short-2 pt-8px d-block">{{ horaire.texte }}</span>
{% endfor %}

<h4 class="mb-2 mt-2"><strong>Renseignements</strong></h4>
{% for contact in offre.contacts %}
    {% if contact.lib.get('fr') %}
        <p><strong>{{ contact.lib.get('fr') }}</strong></p>
    {% endif %}
    {% if contact.noms %}
        <p> {{ contact.noms }} {{ contact.prenoms }} </p>
    {% endif %}
    <br/>
    <p> {{ contact.adresse }} {{ contact.numero }}</p>
    <br/>
    <span>{{ contact.postal }} {{ contact.l_nom }}</span><br/><p>
    {% for communication in contact.communications %}
        <strong>{{ communication.lib.get('fr') }}</strong> {{ communication.val }}
        <br/>
    {% endfor %}</p>
{% endfor %}
